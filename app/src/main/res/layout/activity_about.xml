<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 顶部栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#333333"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关于我们"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <Space
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- 内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 应用图标和名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:background="#E0E0E0"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算器应用"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textSize="16sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- 项目简介 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="项目简介"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本应用是Android开发课程的期末项目，实现了基本的计算器功能，包括基础计算、科学计算以及用户登录等功能。"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- 功能特点 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="功能特点"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 基础计算功能\n2. 科学计算功能\n3. 分数计算功能\n4. 历史记录查看\n5. 用户登录注册\n6. 主题设置\n7. 广播功能演示"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- 技术实现 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本项目采用了以下Android开发技术："
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Activity和布局设计\n- Intent和Activity跳转\n- 广播接收器\n- 用户界面设计\n- 事件处理\n- Java面向对象编程"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- 开发团队 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开发团队"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小组成员：\n- 代樾\n- 吴紫玉\n- 高嘉洁"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="24dp" />

            <!-- 版权信息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="© 2024 计算器项目小组 版权所有"
                android:textSize="14sp"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout> 